#include <iostream>
#include <cstdlib>
#include <ctime>
using namespace std;

int linear_search(int key, int n, int arr[])
{
    for (int i = 0; i < n; i++)
    {
        if (arr[i] == key)
        {
            cout << "element found at index:" << i << endl;
            return i;
        }
    }
    return -1;
}
